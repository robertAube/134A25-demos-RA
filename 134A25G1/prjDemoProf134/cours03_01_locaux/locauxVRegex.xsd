<?xml version="1.0" encoding="UTF-8"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema">
    <xs:element name="cegep">
        <xs:complexType>
            <xs:sequence>
                <xs:element name="local" type="localType" maxOccurs="unbounded"/>
            </xs:sequence>
        </xs:complexType>
    </xs:element>

    <!-- Type rÃ©utilisable pour local -->
    <xs:complexType name="localType">
        <xs:sequence>
            <xs:element name="noLocal" >
                <xs:simpleType>
                    <xs:restriction base="xs:string">
                        <xs:pattern value="[B-Z]{2}[0-9]{4}"/>
                    </xs:restriction>
                </xs:simpleType>
            </xs:element>
            <xs:element name="nbEtudiant" type="xs:integer"/>
        </xs:sequence>
    </xs:complexType>
</xs:schema>